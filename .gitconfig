[core]
	editor = vim
	autocrlf = input
	pager = less -rFX
	excludesfile = ~/.gitignore
	trustctime = false
	filemode = false

[pager]
	branch = true

[merge]
	tool = vimdiff

[alias]
	hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
	st = status
	last = log -1 --stat
	cp = cherry-pick
	co = checkout
	cl = clone
	ci = commit
	br = branch
	unstage = reset HEAD --
	dc = diff --cached
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all

[difftool]
	tool = vimdiff
	prompt = false

[push]
	default = matching

[credential]
	helper = cache --timeout 30000

[color]
	ui = true
[mergetool]
	keeptemporaries = false
	keepbackups = false
	prompt = false
	trustexitcode = false
