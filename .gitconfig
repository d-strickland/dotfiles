[user]
	name = David Strickland
	email = "dstrick2989@gmail.com"

[core]
    editor = vim
    autocrlf = false
    safecrlf = true
    pager = less -rFX
	excludesfile = ~/.gitignore

[pager]
    branch = true

[merge]
    tool = vimdiff

[alias]
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short

[difftool]
    tool = vimdiff
	prompt = false

[push]
	default = matching

[credential]
    helper = cache --timeout 30000

[color]
	ui = true
